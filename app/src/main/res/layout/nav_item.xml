<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_16sdp">

    <View
        android:id="@+id/nav_item_selected_view"
        android:layout_width="@dimen/_4sdp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav_item_details"
        android:layout_alignBottom="@+id/nav_item_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:background="@drawable/selected" />

    <RelativeLayout
        android:id="@+id/nav_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toEndOf="@+id/nav_item_selected_view"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/nav_item_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/icon"
            android:scaleType="fitXY"
            tools:src="@drawable/explore" />

        <TextView
            android:id="@+id/nav_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/nav_item_icon"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:textColor="@color/color_cod_gray"
            android:textSize="@dimen/_14ssp"
            tools:text="Explore" />

    </RelativeLayout>

</RelativeLayout>
